<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet author="LesnikBeats" id = "20">
        <createTable tableName="persons">
            <column autoIncrement="true" name="id" type="NUMERIC">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>

            <column name="last_name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>

            <column name="person_code" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>

            <column name="birth_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet author="LesnikBeats" id="21">
        <createIndex tableName="persons" indexName="ix_unique_persons" unique="true">
            <column name="first_name"/>
            <column name="last_name"/>
            <column name="person_code"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>