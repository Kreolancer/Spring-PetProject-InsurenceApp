<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet author = "Timofey" id = "40">
        <createTable tableName="travel_cancellation_age_coefficient">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="age_from" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="age_to" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="coefficient" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Timofey" id="41">
        <createIndex indexName="ix_travel_cancellation_age_coefficient_age_from_age_to"
                     tableName="travel_cancellation_age_coefficient"
                     unique="true">
            <column name="age_from"/>
            <column name="age_to"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>